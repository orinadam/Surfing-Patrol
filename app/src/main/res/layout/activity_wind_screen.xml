<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2222222"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".WindScreen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Location"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/wind_go_back"
            android:layout_width="20dp"
            android:layout_marginLeft="180dp"
            android:paddingTop="15dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00222222"
            android:tint="#BFFFFFFF"
            app:srcCompat="@android:drawable/ic_menu_revert" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/wave_btn_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="Wave"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:background="#00FFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/wind_btn_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:text="Wind"
            android:background="#00FFFFFF"
            android:textColor="#7DC6D9"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/temperature_btn_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:text="Temperature"
            android:textColor="#FFFFFF"
            android:background="#00FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
    <ListView
        android:id="@+id/itemWindListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        />
</LinearLayout>